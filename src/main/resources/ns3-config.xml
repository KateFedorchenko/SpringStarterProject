<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="messageAppender" class="spring.notify.FileMessageAppender">
        <constructor-arg name="file" value="D:\censorFilter.txt"/>
    </bean>

    <bean id="notificationService" class="spring.notify.NotificationServiceImpl2">
        <constructor-arg name="messageAppender" ref="messageAppender"/>
    </bean>
</beans>